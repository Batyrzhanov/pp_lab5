movies = [
    {
        "name": "Usual Suspects", 
        "imdb": 7.0,
        "category": "Thriller"
    },
    {
        "name": "Hitman",
        "imdb": 6.3,
        "category": "Action"
    },
    {
        "name": "Dark Knight",
        "imdb": 9.0,
        "category": "Adventure"
    },
    {
        "name": "The Help",
        "imdb": 8.0,
        "category": "Drama"
    },
   
]

def calculate_average_imdb_score(movies):
    total_imdb = sum(movie["imdb"] for movie in movies)
    average_imdb = total_imdb / len(movies) if len(movies) > 0 else 0
    return average_imdb

selected_movies = []

while True:
    movie_name = input("Enter a movie name (or 'done' to finish): ")
    if movie_name.lower() == "done":
        break
    found_movie = next((movie for movie in movies if movie["name"] == movie_name), None)
    if found_movie:
        selected_movies.append(found_movie)
    else:
        print("Movie not found in the list.")

average_score = calculate_average_imdb_score(selected_movies)

if average_score > 0:
    print(f"Average IMDb score of selected movies: {average_score:.2f}")
else:
    print("No selected movies or invalid IMDb scores.")
