movies = [
    {
        "name": "Usual Suspects", 
        "imdb": 7.0,
        "category": "Thriller"
    },
    {
        "name": "Hitman",
        "imdb": 6.3,
        "category": "Action"
    },
    {
        "name": "Dark Knight",
        "imdb": 9.0,
        "category": "Adventure"
    },
    {
        "name": "The Help",
        "imdb": 8.0,
        "category": "Drama"
    },
    
]

def calculate_average_imdb_score(movies):
    total_imdb = sum(movie["imdb"] for movie in movies)
    average_imdb = total_imdb / len(movies) if len(movies) > 0 else 0
    return average_imdb

selected_categories = []

while True:
    category_name = input("Enter a category name (or 'done' to finish): ")
    if category_name.lower() == "done":
        break
    found_movies = [movie for movie in movies if movie["category"] == category_name]
    if found_movies:
        selected_categories.extend(found_movies)
    else:
        print("Category not found in the list.")

average_score = calculate_average_imdb_score(selected_categories)

if average_score > 0:
    print(f"Average IMDb score of selected categories: {average_score:.2f}")
else:
    print("No selected categories or invalid IMDb scores.")


